@model IEnumerable<QuanLyCuTru.Models.CuTru>

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th class="border-bottom-0">
                @Html.DisplayNameFor(m => m.Id)
            </th>
            <th class="border-bottom-0">
                @Html.DisplayNameFor(m => m.Ten)
            </th>
            <th class="border-bottom-0">
                @Html.DisplayNameFor(m => m.DiaChi)
            </th>
            <th class="border-bottom-0">
                @Html.DisplayNameFor(m => m.DienThoai)
            </th>
            <th class="border-bottom-0">
                @Html.DisplayNameFor(m => m.NgayDangKy)
            </th>
            <th class="border-bottom-0">
                @Html.DisplayNameFor(m => m.LoaiCuTruId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", "QuanLyCuTru", new { id = item.Id })">
                <th scope="row">@item.Id</th>
                <td>@item.Ten</td>
                <td>@item.DiaChi</td>
                <td>@item.DienThoai</td>
                <td>@item.NgayDangKy.ToShortDateString()</td>
                <td>@item.LoaiCuTru.Ten</td>
            </tr>
        }
    </tbody>
</table>
