@model QuanLyCuTru.Models.NguoiDung

<style>
.navbar{
    padding: 0.5rem 1rem;
}
</style>
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a href="#" class="navbar-brand">@ViewBag.PageTitle</a>
 
    <button class="navbar-toggler collapsed" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                @Html.ActionLink("Trang chủ", "Index", "CanBo", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Cư trú</a>
                <div class="dropdown-menu">
                    @Html.ActionLink("Đăng ký", "Create", "QuanLyCuTru", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Danh sách", "Index", "QuanLyCuTru", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Chưa duyệt", "Index", "QuanLyCuTru",
                       new { LoaiTrangThaiId = 3 },
                       new { @class = "dropdown-item" })
                    @Html.ActionLink("Đã duyệt", "Index", "QuanLyCuTru",
                       new { LoaiTrangThaiId = 2 },
                       new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Công dân</a>
                <div class="dropdown-menu">
                    @Html.ActionLink("Danh sách", "Index", "QuanLyDan", null, new { @class = "dropdown-item" })
                    <a href="#" class="dropdown-item">Chưa đăng ký</a>
                    <a href="#" class="dropdown-item">Đã đăng ký</a>
                </div>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">Liên hệ</a>
            </li>
        </ul>
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <ul class="navbar-nav  mr-sm-2">
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <img src="@Model.Avatar" width="30" height="30" class="nav-avatar mr-sm-2" alt="">
                            @User.Identity.GetUserName()
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="#" class="dropdown-item text-capitalize">Hồ sơ cá nhân</a>
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item text-capitalize">Đăng xuất</a>
                        </div>
                    </li>
                </ul>
            }
        }
        else
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info", id = "loginLink" })
                </li>
            </ul>
        }
    </div>
</nav>